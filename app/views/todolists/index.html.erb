<h1>Todolists#index</h1>

<% if flash[:notice] %>
  <%= flash[:notice] %>
<% end %>

<%= link_to "全削除", todolists_destroy_all_path, method: :delete, "data-confirm" => "本当に削除しますか?" %>

<% @lists.each do |list| %>
  <p>タイトル</p>
  <span>
    <%= link_to list.title, todolist_path(list.id)%>
  </span>

  <p>画像</p>
  <% if list.image.attached? %>
    <%= image_tag list.image, size: "200x200" %>
  <% else %>
    <%= image_tag 'no_image', size: "200x200" %>
  <% end %>
<% end  %>